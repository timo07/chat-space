.main-chat
  .header
    .main-header
      .main-header__group
        = @group.name
      %ul.main-header__members
        Memberï¼š
        - @group.users.each do |user|
          %li.member
            = user.name
    .header-edit
      .header-edit__button
        = link_to "Edit", edit_group_path(@group.id), class: 'btn btn-default'

  .messages
    = render @messages
    
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__new', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = fa_icon 'image', class: 'icon'
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'